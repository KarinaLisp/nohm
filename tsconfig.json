{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "declaration": true,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "noUnusedParameters": true,
    "lib": [
      "es7"
    ],
    "outDir": "./tsOut",
    "sourceMap": true
  },
  "files": [
    "./ts/index.ts"
  ],
  "include": [
    "./ts/tests.ts"
  ],
  "exclude": [
    "./lib/*.js"
  ]
}
